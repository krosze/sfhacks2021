<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="/public/css/form.css">
    <link rel="stylesheet" type="text/css" href="/public/css/home.css">
    <link rel="stylesheet" type="text/css" href="/public/css/testing.css">
    <script defer src="/public/js/frontendjs.js"></script>
</head>

<body>
    <div id=container>
        {{>header}}
        
        {{#if (emptyObject messages)}}
            {{> flashmsg}}
        {{/if}}
        
        {{{body}}}
        {{>footer}}
    </div>

    {{#if logged}}
        <script>
            let ele = document.getElementById('logout-button');
            if(ele){
                ele.onclick = (even) => {
                    fetch('/users/logout',{
                        method:"POST"
                    })
                    .then((data) => {
                        location.replace('/');
                    })
                }
            }
        </script>
    {{/if}}
</body>
</html>